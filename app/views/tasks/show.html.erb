<article class="task">
  <section class="title">
    <h1><%= @task.title %></h1>
    <p><%= @task.status %></p>
  </section>
  <section class="description">
    <p><%= @task.description %></p>
  </section>
</article>
<small>
  <%= link_to "Back", :back, class: 'btn btn-secondary' %>
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-success' %>
  <%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</small>
<div class="users">
  <h2>Developers:</h2>
  <table>
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><h3><%= user.email %></h3></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>