<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <a class="navbar-brand" href="<%= projects_path %>">All Projects</a>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">All Tasks</a>
          </li>
        </ul>
        <%= link_to 'New Project', new_project_path, class: 'btn btn-outline-primary pull-xs-right' %>
      </nav>
    </div>
    <div class="container main">
      <%= yield %>
    </div>
  </body>
</html>
